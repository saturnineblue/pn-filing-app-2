// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Product {
  id          String   @id @default(cuid())
  nickname    String   @unique
  productCode String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model Submission {
  id              String    @id @default(cuid())
  orderName       String
  trackingNumber  String
  documentId      String?   // CustomsCity document ID
  pncNumber       String?   // PNC when retrieved
  status          String    @default("submitted") // "submitted", "pnc_received", "failed"
  submittedAt     DateTime  @default(now())
  pncRetrievedAt  DateTime?
  errorMessage    String?
  
  @@index([orderName])
  @@index([submittedAt])
  @@index([status])
}
